{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./app",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.test.ts*"
  ],
  "include": [
    "**/*.cy.ts*",
    "**/*.ts*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
